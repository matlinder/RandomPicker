<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="linderlabs.randompicker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="What do you want me to pick?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/restaurantBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/button_bottom_space"
            android:layout_marginEnd="@dimen/button_layout_padding"
            android:layout_marginStart="@dimen/button_layout_padding"
            android:layout_marginTop="150dp"
            android:background="@drawable/mybutton"
            android:onClick="startAcitivyRestaurant"
            android:text="Where to eat?"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activitiesBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/button_bottom_space"
            android:layout_marginEnd="@dimen/button_layout_padding"
            android:layout_marginStart="@dimen/button_layout_padding"
            android:background="@drawable/mybutton"
            android:onClick="startAcitivyToDo"
            android:text="What to do?"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/customBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/button_layout_padding"
            android:layout_marginStart="@dimen/button_layout_padding"
            android:background="@drawable/mybutton"
            android:onClick="startAcitivyCustomList"
            android:text="Search Nearby"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
